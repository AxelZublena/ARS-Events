class Display{

	private initDOM: HTMLElement;
	private DOM: HTMLElement;

    public constructor(){

		this.initDOM = this.createInitDOM();

        this.DOM = container;
        console.log(this.DOM.childNodes[1]);
        try{
            this.DOM.querySelector(".event").remove();
            this.DOM.append(this.initDOM);
        }
        catch{
            this.DOM.append(this.initDOM);
        }
    }

    public displayEventInContainer(eventContainer: HTMLElement):void{
        let html = document.createElement("div");
        html.className = "event-main-img";
        let html2 = document.createElement("div");
        html2.className = "blur";
        let html3 = document.createElement("p");
        html3.className = "event-img-date";
        html3.innerText = this.date.toString();
        html2.append(html3);
        html.append(html2);
        //this.initDOM.append(html);
        eventContainer.append(html);
    }

